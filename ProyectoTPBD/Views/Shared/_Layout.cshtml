            <div id="menu-btn">
                <div class="btn-hamburguer"></div>
                <div class="btn-hamburguer"></div>
                <div class="btn-hamburguer"></div>
            </div>
        </div>

        <div id="logo">
            <div id="photo">
                <img src="~/Content/imgs/Logo_de_la_UABC.svg.png" />
            </div>
            <div id="name">
                <span>SISPRATNE</span>
            </div>
        </div>

        <div id="menu-items">
            <div class="item">
                <a href='@Url.Action("Index", "Home")'>
                    <div class="icon">
